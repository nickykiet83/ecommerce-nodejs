<% layout('layout') -%>

<div class="jumbotron" id="navbar-gap">
    <div class="container">
        <h1 class="display-3">Shop Smart, Save Big!</h1>
        <p>Find your favourite Product</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <% for (var i = 0; i < products.length; i++) { %>
            <div class="col-md-4">
                <a href="/product/<%= products[i]._id %>">
                    <div class="thumbnail">
                        <img class="img-thumbnail" src="<%= products[i].image %>">
                        <div class="caption">
                            <h3>
                                <%= products[i].name %>
                            </h3>
                            <p>
                                <%= products[i].category.name %>
                            </p>
                            <p>
                                <%= products[i].price %>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <nav class="" aria-label="Page navigation example">
                <ul class="pagination">
                    <% for (var i = 1; i < pages; i++) { %>
                        <% if (i === 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/">
                                    <%= i %>
                                </a>
                            </li>
                            <% } else { %>
                                <li class="page-item">
                                    <a class="page-link" href="/page/<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>
                        <% } %>
                </ul>
            </nav>
        </div>
    </div>
</div>